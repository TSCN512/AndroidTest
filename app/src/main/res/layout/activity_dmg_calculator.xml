<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.owner.androidtest.dmg_calculator" tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">


    <ImageView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:id = "@+id/servantPic"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id = "@+id/class_icon"
            app:layout_constraintTop_toTopOf="@+id/servantPic"
            app:layout_constraintRight_toLeftOf="@+id/servantPic"
            app:layout_constraintLeft_toRightOf="@+id/calcStart"/>
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/monsterPic"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/servantPic"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/monsterClass"
            app:layout_constraintTop_toTopOf="@+id/monsterPic"
            app:layout_constraintRight_toLeftOf="@+id/monsterPic"
            app:layout_constraintLeft_toRightOf="@+id/calcStart"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monsterAttribute"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/monsterClass"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/monsterPic"
            app:layout_constraintLeft_toRightOf="@+id/calcStart"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/warningCalc"
            app:layout_constraintTop_toBottomOf="@+id/calcStart"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id = "@+id/servantClass"
            app:layout_constraintBottom_toTopOf="@+id/class_icon"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/servantAttribute"
            app:layout_constraintTop_toBottomOf="@+id/class_icon"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/calcStart"
            app:layout_constraintRight_toLeftOf="@+id/servantPic"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servantAtk2"
            app:layout_constraintTop_toBottomOf="@id/servantAttribute"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/calcStart"
            app:layout_constraintRight_toLeftOf="@+id/servantPic"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calcStart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_marginTop="120dp"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Servant ID"

            android:id="@+id/idTaker"
            app:layout_constraintBottom_toTopOf="@+id/calcStart"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/idTaker"
            android:id="@+id/monsterSpinner"/>
    <ScrollView
            android:layout_width="200dp"
            android:layout_height="120dp"
            app:layout_constraintRight_toLeftOf="@+id/monsterSpinner"
            app:layout_constraintTop_toTopOf="@id/monsterSpinner"
            android:layout_marginBottom="70dp"
            app:layout_constraintLeft_toLeftOf="parent">
    <TextView
            android:id="@+id/battleLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/monsterSpinner"
            app:layout_constraintTop_toTopOf="@id/monsterSpinner"
            android:layout_marginBottom="70dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </ScrollView>
    <TextView
            android:id="@+id/cardLog"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/monsterSpinner"
            />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/arts"
            android:id="@+id/artsButton"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cardLog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/servantPic"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/buster"
            android:id="@+id/busterButton"
            android:visibility="invisible"
            app:layout_constraintRight_toLeftOf="@id/artsButton"
            app:layout_constraintLeft_toRightOf="@id/cardLog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/servantPic"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/quick"
            android:id="@+id/quickButton"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/artsButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/servantPic"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undoButton"
            android:text = "Undo Card Selection"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artsButton"
            app:layout_constraintLeft_toLeftOf="@id/busterButton"
            app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
