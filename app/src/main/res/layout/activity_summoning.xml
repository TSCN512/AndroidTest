<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.owner.androidtest.Summoning"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">


    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:id="@+id/summoning_tv1"
            android:background="@drawable/border"
            app:layout_constraintRight_toLeftOf="@+id/summoning_tv2" tools:layout_constraintRight_creator="1"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/summoning_tv2" tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:id="@+id/summoning_tv2"
            android:background="@drawable/border"

            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="8dp" app:layout_constraintRight_toRightOf="@+id/summoning_tv3"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/summoning_tv3"
            android:background="@drawable/border"

            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/summon10"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/summoning_tv1" tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="20dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
    <Button
            android:text="Roll 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summon10"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="44dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="1dp"
            android:layout_marginRight="44dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="19dp"

            app:layout_constraintRight_toRightOf="@+id/summon10"
            app:layout_constraintBottom_toTopOf="@+id/summon10"
            android:layout_marginRight="19dp"/>
</android.support.constraint.ConstraintLayout>

